@model PagedList<LogRecord>

@using X.PagedList;

<div class="wrapper wrapper-content">

	<div class="row">

		<div class="col-md-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">All Records</h3>
				</div>

				<div class="panel-body">
					<div class="row">
						<div class="col-md-6">
							<div class="text-left">
								@if (Model.HasPreviousPage)
								{
									<a href="@Url.Action("index")" class="btn btn-warning">First Page</a>
									<a href="@Url.Action("index", new { page = ViewBag.PreviousPage })" class="btn btn-primary">Previous Page</a>
								}
							</div>
						</div>
						<div class="col-md-6">
							<div class="text-right">
								@if (Model.HasNextPage)
								{
									<a href="@Url.Action("index", new { page = ViewBag.NextPage })" class="btn btn-primary">Next Page</a>
									<a href="@Url.Action("index", new { page = ViewBag.LastPage })" class="btn btn-warning">Last Page</a>
								}
							</div>
						</div>
					</div>
				</div>

				<table class="table table-condensed table-hover">
					<thead>
						<tr>
							<th>Timestamp</th>
							<th>Message Class</th>
							<th>Sending IP</th>
							<th>Receiving IP</th>
							<th>Country</th>
							<th>Failed Tests</th>
						</tr>
					</thead>

					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>
									@Html.DisplayFor(modelItem => item.TimestampUTC)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.MessageClass)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.SendingIP)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.ReceivingIP)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Country)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.FailedTestsString)
								</td>
							</tr>
						}
					</tbody>
				</table>

				<div class="panel-footer">
					<div class="row">
						<div class="col-md-6">
							<div class="text-left">
								@if (Model.HasPreviousPage)
								{
								<a href="@Url.Action("index")" class="btn btn-warning">First Page</a>
								<a href="@Url.Action("index", new { page = ViewBag.PreviousPage })" class="btn btn-primary">Previous Page</a>
								}
							</div>
						</div>
						<div class="col-md-6">
							<div class="text-right">
								@if (Model.HasNextPage)
								{
								<a href="@Url.Action("index", new { page = ViewBag.NextPage })" class="btn btn-primary">Next Page</a>
								<a href="@Url.Action("index", new { page = ViewBag.LastPage })" class="btn btn-warning">Last Page</a>
								}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section scripts {
	<script>
		(function () {


		})();
	</script>
}